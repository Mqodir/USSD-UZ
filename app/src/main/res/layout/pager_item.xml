<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/llTitle"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="20dp"
        android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="110dp"
                    android:id="@+id/comLogo"
                    android:background="@drawable/item_bg"
                    android:layout_margin="5dp"
                    android:src="@drawable/uzmobile"
                    android:layout_height="110dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:id="@+id/comTitle"
                        android:textSize="20dp"
                        android:text="Uzmobile"
                        android:layout_marginTop="-10dp"
                        android:layout_marginLeft="5dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#fff"
                        android:id="@+id/comSlogan"
                        android:textSize="15dp"
                        android:text="Talablarga mos aloqa operatori"
                        android:layout_marginLeft="5dp"
                        android:textStyle="normal"/>
                </LinearLayout>
            </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:gravity="bottom"
        android:layout_marginTop="24dp"
        android:weightSum="11"
        android:paddingTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/llTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:orientation="vertical"
        android:layout_height="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@id/bottomShet"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:translationZ="1dp"
                            android:id="@+id/btnInternet"
                            android:outlineSpotShadowColor="@color/perfect"
                            android:outlineAmbientShadowColor="@color/perfect"
                            app:cardBackgroundColor="@color/perfect"
                            app:cardCornerRadius="35dp"
                            android:layout_height="70dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:src="@drawable/ic_icons8_internet"/>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/inter"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"
                            android:textColor="#111"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:translationZ="1dp"
                            android:id="@+id/btnTarif"
                            android:outlineSpotShadowColor="@color/perfect"
                            android:outlineAmbientShadowColor="@color/perfect"
                            app:cardBackgroundColor="@color/perfect"
                            app:cardCornerRadius="35dp"
                            android:layout_height="70dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:src="@drawable/ic_icons8_circled_menu"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/tarif"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="#111"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:translationZ="1dp"
                            android:id="@+id/btnSms"
                            android:outlineSpotShadowColor="@color/perfect"
                            android:outlineAmbientShadowColor="@color/perfect"
                            app:cardBackgroundColor="@color/perfect"
                            app:cardCornerRadius="35dp"
                            android:layout_height="70dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:src="@drawable/ic_icons8_sms"/>


                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/smstoplam"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"
                            android:textColor="#111"
                            android:textSize="15dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:translationZ="1dp"
                            android:outlineSpotShadowColor="@color/perfect"
                            android:outlineAmbientShadowColor="@color/perfect"
                            android:id="@+id/btnTime"
                            app:cardBackgroundColor="@color/perfect"
                            app:cardCornerRadius="35dp"
                            android:layout_height="70dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:src="@drawable/ic_icons8_watch"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/daqiqatoplamlar"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="#111"
                            android:textSize="15dp"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_weight="3"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:translationZ="1dp"
                            android:id="@+id/btnUssd"
                            android:outlineSpotShadowColor="@color/perfect"
                            android:outlineAmbientShadowColor="@color/perfect"
                            app:cardBackgroundColor="@color/perfect"
                            app:cardCornerRadius="35dp"
                            android:layout_height="70dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:src="@drawable/ic_icons8_thumbs_up"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/foydali"
                            android:layout_marginTop="8dp"
                            android:gravity="center"
                            android:layout_marginBottom="12dp"
                            android:textColor="#111"
                            android:textSize="15dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_height="140dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="70dp"
                            android:foreground="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:translationZ="1dp"
                            android:id="@+id/btnService"
                            android:outlineSpotShadowColor="@color/perfect"
                            android:outlineAmbientShadowColor="@color/perfect"
                            app:cardBackgroundColor="@color/perfect"
                            app:cardCornerRadius="35dp"
                            android:layout_height="70dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="12dp"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="38dp"
                                    android:src="@drawable/ic_icons8_service"/>
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/xizmatlar"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="12dp"
                            android:textColor="#111"
                            android:textSize="15dp"/>
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="2"
            android:gravity="bottom"
            android:id="@+id/bottomShet"
            android:layout_marginTop="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:translationZ="1000dp"
            android:weightSum="2"
            android:elevation="100dp"
            android:layout_marginBottom="12dp"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:id="@+id/btnChekTraik"
                android:textColor="@color/colorWhite"
                android:text="@string/trafik"
                android:layout_marginRight="6dp"
                android:background="@drawable/btn_bg_color"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginLeft="6dp"
                android:textColor="@color/colorWhite"
                android:text="@string/balans"
                android:id="@+id/btnChekBalans"
                android:background="@drawable/btn_bg_color"
                android:layout_weight="1"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>