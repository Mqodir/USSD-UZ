<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="8"
    android:id="@+id/LessonTypeBg"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="18dp"
        android:layout_margin="12dp"
        android:id="@+id/itemCardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="100 MB"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:textColor="#444"
                    android:paddingRight="12dp"
                    android:id="@+id/itemTitle"
                    android:background="#D7E0ED"
                    android:paddingLeft="12dp"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:text="@string/appbar_scrolling_view_behavior"
                android:textSize="18dp"
                android:maxLines="4"
                android:id="@+id/itemDes"
                android:ellipsize="end"
                android:padding="8dp"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="12dp"
                android:layout_height="42dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/summaCont"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="38dp"
                        android:background="@drawable/filled_circle"
                        android:padding="8dp"
                        android:src="@drawable/money_bag"
                        android:layout_height="38dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="10 000 so'm"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/itemCost"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:paddingLeft="8dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1"
                    android:gravity="center_vertical|right"
                    android:layout_height="38dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/gray_4"
                        android:textSize="18dp"
                        android:text="@string/batafsil"/>
                    <ImageView
                        android:layout_width="32dp"
                        android:layout_marginLeft="12dp"
                        android:src="@drawable/next_page"
                        android:layout_height="wrap_content"/>
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>