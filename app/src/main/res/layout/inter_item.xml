<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:weightSum="8"
    android:id="@+id/LessonTypeBg"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:cardCornerRadius="18dp"
        android:layout_margin="12dp"
        android:id="@+id/itemCardView"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="128dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="48dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="100 MB"
                    android:gravity="center_vertical"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#444"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/itemTitle"
                    android:background="#D7E0ED"
                    android:paddingLeft="12dp"
                    android:layout_height="48dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_height="80dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:id="@+id/targetIcon"
                        android:background="@drawable/filled_circle"
                        android:padding="12dp"
                        android:src="@drawable/radio_tower"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="100 MB"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:textStyle="bold"
                        android:id="@+id/itemValue"
                        android:textColor="#444"
                        android:paddingLeft="8dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:layout_height="match_parent">
                    <ImageView
                        android:layout_width="50dp"
                        android:background="@drawable/filled_circle"
                        android:padding="12dp"
                        android:src="@drawable/money_bag"
                        android:layout_height="50dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="10 000 so'm"
                        android:gravity="center_vertical"
                        android:textSize="18dp"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:id="@+id/itemCost"
                        android:textStyle="bold"
                        android:textColor="#444"
                        android:paddingLeft="8dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>